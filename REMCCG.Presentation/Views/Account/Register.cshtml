@model REMCCG.Application.Common.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_registerLayout.cshtml";
}

<div class="register">
    <div class="register-form">
        <h1>Sign Up</h1>
        <form asp-action="Register">
            <div class="errors" asp-validation-summary="All"></div>
            <div class="form-group">
                <div class="icon"><i class="fas fa-user"></i></div>
                <input asp-for="FirstName" placeholder="Firstname" required />
            </div>
            <div class="form-group">
                <div class="icon"><i class="fas fa-user"></i></div>
                <input asp-for="LastName" placeholder="Lastname" required />
            </div>
            <div class="form-group">
                <div class="icon"><i class="fas fa-envelope"></i></div>
                <input asp-for="Email" placeholder="Email Address" required />
            </div>
            <div class="form-group">
                <div class="icon"><i class="fas fa-lock"></i></div>
                <input asp-for="Password" placeholder="Password" required />
            </div>
            <div class="form-group">
                <div class="icon"><i class="fas fa-lock"></i></div>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" required />
            </div>
            <div class="form-group">
                <input type="checkbox" id="terms" name="terms" required />
                <label for="terms">I agree with the Terms of Use & Privacy Policy</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" />
            </div>

            <div class="end">
                <p>Already have an account? <a asp-area="" asp-controller="Account" asp-action="Login">Sign In</a></p>
                <p>Or Sign Up with:</p>
            </div>
            <div class="google">
                <p><i class="fab fa-google fa-2x" style="color: #dd4b39;"></i>   GOOGLE</p>
            </div>
        </form>
    </div>
</div>